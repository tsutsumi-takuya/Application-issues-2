<div class='body'>
	<div class='container'>

	<% if flash[:notice] %>
 		<p><%= flash[:notice] %></p>
	<% end %>

	<div class='row'>
		<div class='col-xs-3'>

		<h2>User info</h2>
		<%= render 'users/profile', user: @user %>
		<!--同コントローラーのviewで表示ならusersは省略可 -->

		<h2>New book</h2>
		<%= render 'books/newform', book: @book %>

		</div>

	<div class="col-xs-9">
		<h2>Books</h2>
		<!--books一覧 -->
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th></th>
					<th>title</th>
					<th>opinion</th>
					<th colspan="5"></th>
				</tr>
			</thead>

			<tbody>
				<% @books.each do |book| %>
					<tr>
						<td>
							<%= link_to user_path(book.user) do %>
							<%= attachment_image_tag(@user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %>
							<% end %>
						</td>
						<td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
						<td><%= book.body %></td>
						<td><%= render 'favorites/favorite', book: book %></td>
						<td><%= render 'book_comments/book_comment', user: current_user ,book: book %></td>
					</tr>
				<% end %>
			</tbody>
		</table>

<!--books一覧 -->
	</div>
	</div>
</div>
</div>

